int main()
{
	FILE* pf = fopen("test.txt", "w");
	if (pf != NULL)
	{
		fputc('h', pf);
		fputc('e', pf);
		fputc('l', pf);
		fputc('l', pf);
		fputc('o', pf);
	}
	fclose(pf);
	pf = NULL;
	return 0;
}
