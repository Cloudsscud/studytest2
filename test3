//输入若干个整数值存入数组，用筛选法求出其中的素数，按从小到大的顺序输出。
#include<stdio.h>
#include<math.h>
//找到数组的最大值
int max(int* arr)
{
	int max = arr[0];
	int i = 0;
	for(i=1;i<100;i++)
	{
		if (max < arr[i])
			max = arr[i];
	}
	return max;
}

int main()
{
	int i = 0;
	int j = 0;
	int arr[100] = {0};
	printf("最多可输入100个整数");
	printf("若要提前停止输入，请输入0\n");
	for (i = 0; i < 100; i++)
	{
		printf("%d ", i+1);
		scanf("%d", &arr[i]);
		if (arr[i] == 0)
			break;
	}
	//筛选法把不是素数的都赋值为0
	for (i = 0; i < 100; i++)
	{
		for (j = 2; j < sqrt(max(arr)); j++)
		{
			if (arr[i] < 2 || arr[i] % j == 0)
			{
				arr[i] = 0;           
				break;
			}
		}
	}
	//将找出的素数从小到大排序并输出
	for (i = 0; i < 100; i++)
	{
		int j = 0;
		for (j = i; j < 99 - i; j++)
		{
			if (arr[j] > arr[j + 1])
			{
				int tmp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = tmp;
			}
		}
	}
	//输出素数
	printf("素数为:\n");
	for (i = 0; i < 100; i++)
	{
		if (arr[i] != 0)
		{
			printf("%d ", arr[i]);
		}
	}
	return 0;
}
